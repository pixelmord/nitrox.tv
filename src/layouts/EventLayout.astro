---
import type { CollectionEntry } from 'astro:content';

import FormattedDate from '../components/FormattedDate.astro';
import Layout from './Layout.astro';

type Props = CollectionEntry<'recipes'>['data'];

const { title, summary, datePublished, dateModified, image } = Astro.props;
---

<Layout title={title} description={summary}>
	<main class="grid md:grid-cols-[1fr_60rem_1fr]">
			<article class="prose container">
				<div class="hero-image">
					{image && !!image.length && <img width={1020} height={510} src={image[0]} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={datePublished} />
							{
								dateModified && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={dateModified} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>

</Layout>
